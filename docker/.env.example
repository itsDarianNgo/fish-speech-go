# Fish-Speech-Go Docker Environment Variables
# Copy this file to .env and fill in your values

# Hugging Face token (REQUIRED for downloading models)
# Get your token at: https://huggingface.co/settings/tokens
# You must also accept the model license at: https://huggingface.co/fishaudio/openaudio-s1-mini
HF_TOKEN=hf_your_token_here

# Optional: API key for authentication (leave empty for no auth)
API_KEY=

# Optional: Server port (default: 8080)
SERVER_PORT=8080

# Optional: Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: Log format (json, text)
LOG_FORMAT=json

# Optional: Maximum text length for TTS (0 = unlimited)
MAX_TEXT_LENGTH=0
